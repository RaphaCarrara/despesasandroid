<HomePage>:
    FloatLayout:

        #Lista de vendas
        ScrollView:
            pos_hint: {"right":1, "top":0.9 }
            size_hint: 1, 1
            GridLayout:
                cols: 1
                id: lista_registros
                size_hint_y: None
                spacing: 2, 2
                height: self.minimum_height
                row_default_height: "90dp"
                row_force_default: True

    # Três botoões
    GridLayout:
        rows: 1
        pos_hint: {"right":1, "top":0.12}
        size_hint: 1, 0.12
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#006D7E")
            Rectangle:
                size: self.size
                pos: self.pos


        LabelButton:
            text: "Adicionar"
            id: txt_adicionar
            on_release: app.mudar_tela("dadosentrada")


        LabelButton:
            text: "Sair"
            id: txt_sair
            on_release: print("Sair")
